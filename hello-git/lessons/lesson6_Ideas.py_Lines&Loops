# Lesson6.py - Lines and Loops

# A List of topics to learn
topics = ["Variables", "Data Types", "Lists", "Loops", "Functions"]
print("📚 Topics to Learn:")
for i, topic in enumerate(topics, start=1):
    print(f"{i}. {topic}")

# Add your own topic
new_topic = input("\nAdd a new topic your're interested in:")
topics.append(new_topic)
print("\n✅ Updated List of Topics:")
for i, topic in enumerate(topics, start=1):
    print(f"{i}. {topic}")

# A simple while loop
print("\🔄 Practicing a while loop:")
countdown = 3
while countdown > 0:
    print(f"Countdown: {countdown}")
    countdown -= 1
print("🚀 Go!")

# Loop through numbers with range()
print("\n.💹 Numbers from 1 to 5:")
for num in range(1, 6):
    print(num)

print("\n🎉 Lesson 6 Complete!")